---
interface Props {
	id: string;
	name: string;
	description: string;
	imageUrl: string;
	prefecture: string;
	region: string;
}

const { id, name, description, imageUrl, prefecture, region } = Astro.props;
---

<article class="flex flex-col overflow-hidden rounded-lg shadow-lg">
	<div class="flex-shrink-0">
		<img class="h-48 w-full object-cover" src={imageUrl} alt={name} />
	</div>
	<div class="flex flex-1 flex-col justify-between bg-white p-6">
		<div class="flex-1">
			<div class="flex items-center text-sm">
				<span class="inline-flex items-center rounded-full bg-indigo-50 px-2 py-1 text-xs font-medium text-indigo-700">
					{region}
				</span>
				<span class="ml-2 inline-flex items-center rounded-full bg-gray-50 px-2 py-1 text-xs font-medium text-gray-600">
					{prefecture}
				</span>
			</div>
			<a href={`/counselors/${id}`} class="mt-2 block">
				<p class="text-xl font-semibold text-gray-900">{name}</p>
				<p class="mt-3 text-base text-gray-500">{description}</p>
			</a>
		</div>
		<div class="mt-6">
			<a
				href={`/counselors/${id}`}
				class="text-base font-semibold text-indigo-600 hover:text-indigo-500"
			>
				詳しく見る →
			</a>
		</div>
	</div>
</article> 