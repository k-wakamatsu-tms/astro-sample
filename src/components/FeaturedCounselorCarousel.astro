---
import type { Counselor } from "../types/counselor";
import { counselors } from "../data/counselors";
import CounselorCard from "./CounselorCard.astro";

interface Props {
	limit?: number;
}

const { limit = 5 } = Astro.props;
const featuredCounselors = counselors.slice(0, limit);
---

<section class="bg-white py-24 sm:py-32">
  <div class="mx-auto max-w-7xl px-6 lg:px-8">
    <div class="mx-auto max-w-2xl text-center">
      <h2 class="text-3xl font-bold tracking-tight text-gray-900 sm:text-4xl">おすすめの結婚相談所</h2>
      <p class="mt-2 text-lg leading-8 text-gray-600">
        全国から厳選した信頼できる結婚相談所をご紹介します
      </p>
    </div>
    <div class="mx-auto mt-16 grid max-w-2xl grid-cols-1 gap-x-8 gap-y-20 lg:mx-0 lg:max-w-none lg:grid-cols-3">
      {featuredCounselors.map((counselor: Counselor) => (
        <CounselorCard {...counselor} />
      ))}
    </div>
  </div>
</section> 